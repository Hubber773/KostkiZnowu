<Window x:Class="KostkiZnowu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KostkiZnowu"
        mc:Ignorable="d"
        Title="Gra w Kości" Height="350" Width="525">
    <Grid>
        <Button Name="RzutButton" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Click="RzutButton_Click">Rzuć Kostką</Button>
        <Button Name="ResetButton" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10,0,0" Click="ResetButton_Click">Resetuj</Button>
        <Label Name="WynikLabel" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0">Wynik:</Label>
        <TextBlock Name="WynikTextBlock" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,50,0,0"></TextBlock>
        <Label Name="GrafikaLabel" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"></Label>
        <TextBlock Name="GrafikaTextBlock" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,90,0,0"></TextBlock>
    </Grid>
</Window>
